<div class="wish">
  <h2>Your Shopping List on Counductor</h2>
  <% if @records.present? %>
    <% @records.each do |record| %>
    <% item = [];item << ["amazon", record["amazon"]];item << ["rakuten", record["rakuten"]];item << ["yahoo", record["yahoo"]];%>
        <ul class="item">
            <% item.each do |key, value|%>
            <li class="<%= key %>">
                <div class="thumbnail-area">
                  <a href="<%= value['url'] %>" target="item">
                    <img class="item-thumbnail" src="<%= value['img'] %>">
                  </a>
                </div>
                <div class="detail-area">
                  <div class="detail-head">
                    <span class="title"><%= value['title'] %></span>
                    <span class="price">￥<%= value['price'] %></span>
                  </div>
                  <div class="detail-footer">
                    <span class="program">「<%= record['title'] %>」より</span>
                    <span class="created-date"><%= record['created_at'].localtime.strftime("%Y/%m/%d %H:%M:%S") %></span>
                  </div>
                </div>
            </li>
            <% end %>
        </ul>
    <% end %>
   <% else %>
      <h2>購入したいリストにまだアイテムが1つもありません</h2>
   <% end %>
</div>